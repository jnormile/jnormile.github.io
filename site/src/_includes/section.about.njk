{% for item in collections.sections %}
  {% if item.data.type === 'about' %}
    <div id="about" class="w-full min-h-screen flex flex-col justify-center items-center py-12">
      <div class="self-center text-center w-full sm:w-2/3 xl:w-1/2 px-4 sm:px:0">
        <h2 class="font-bold tracking-wider text-gray-800 text-4xl mb-4">{{ item.data.title }}</h2>
        <div class="font-light text-black text-xl">
          {{ item.templateContent | safe }}
        </div>
        <div class="flex flex-row w-full justify-center pt-6">
          <a class="px-10 py-2 text-gray-200 bg-purple-600 rounded-full shadow-md text-lg hover:bg-gray-800 hover:border-red" onclick="window.open('/resume-normile.pdf')" cursor:pointer>View My Resume</a>
        </div>
        <img class="my-12 max-w-full mx-auto" src="/img/cv.png" alt="Documentation">
      </div>
      <div class="font-light text-black text-xl">
        Not into professional documents? Get to know me through my technical skills instead.
      </div>
      <br>
      <div class="flex flex-row w-full justify-center">
        <a class="px-10 py-2 text-gray-200 bg-purple-600 rounded-full shadow-md text-lg hover:bg-gray-800 hover:border-red" href="#features">Take a Look</a>
      </div>
    </div>
  {% endif %}
{% endfor %}