{% for item in collections.sections %}
  {% if item.data.type === 'register' %}
    <div id="register" class="w-full min-h-screen flex flex-col justify-center items-center bg-gray-800">
      <div class="self-center text-center w-full xl:w-1/3 px-4 sm:px:0">
        <h2 class="font-bold tracking-widest text-gray-200 text-4xl mb-4">{{ item.data.title }}</h2>
        <div class="font-light text-gray-400 text-xl">
          {{ item.templateContent | safe }}
        </div>
        <div id="about" class="w-full min-h-screen flex flex-col justify-center items-center py-12">
          <div class="self-center text-center w-full sm:w-2/3 xl:w-1/2 px-4 sm:px:0">
            <h2 class="font-bold tracking-wider text-gray-800 text-4xl mb-4">Welcome to term-world</h2>
            <div class="font-light text-white text-xl">
              The term world project seeks to provide a gamified learning environment for teaching programming
              fundamentals in Python. Check out the repository <a href = "https://github.com/term-world">here</a> 
              to see both the browser-based VS Code platform we use, as well as the curriculum we employ to
              bring a community of learners from basic file navigation within a terminal window all the way
              through object-oriented programming principles!
            </div>
          </div>
        </div>
      </div>
    </div>
  {% endif %}
{% endfor %}